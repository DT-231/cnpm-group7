FROM node:20-alpine

WORKDIR /app

# Copy package files first
COPY package*.json ./

# Copy startup script and make it executable
COPY start.sh /app/start.sh
RUN chmod +x /app/start.sh

# Copy application code
COPY . .

# Expose port
EXPOSE 5173

# Run the startup script with sh
CMD ["sh", "/app/start.sh"]
